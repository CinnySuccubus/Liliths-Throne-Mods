<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<horn>
	<!-- GENERAL INFORMATION: If you are unsure of anything, please use the LT Discord to ask for help! -->
	
	<race>cinnysuccubus_synthetic</race>
	
	<transformationName><![CDATA[synthetic]]></transformationName>
	
	<coveringType>cinnysuccubus_synthetic_metal</coveringType>
	
	<genericType>false</genericType>
	
	<defaultHornsPerRow>2</defaultHornsPerRow>
	
	<name><![CDATA[horn]]></name>
	
	<namePlural><![CDATA[horns]]></namePlural> 
	
	<descriptorsMasculine>
		<descriptor>metallic</descriptor>
	</descriptorsMasculine>
	
	<descriptorsFeminine>
		<descriptor>metallic</descriptor>
	</descriptorsFeminine>
	
	<transformationDescription><![CDATA[
		sleek, metallic [npc.horns].
		<br/>[npc.Name] now [npc.has] [npc.hornsDeterminer] [style.boldSynthetic(metallic [npc.horns])].
	]]></transformationDescription>
	
	<bodyDescription><![CDATA[
		[npc.HornsDeterminer] [npc.hornSize], [npc.hornColour(true)], metallic
		#IF(npc.getTotalHorns()==1)
			 [npc.horn] grows
		#ELSE
			 [npc.horns] grow
		#ENDIF
		 out of the
		#IF(npc.getHornsPerRow()==1)
			 middle
		#ELSE
			 upper sides
		#ENDIF
		 of [npc.her] forehead.
	]]></bodyDescription>
	
</horn>
